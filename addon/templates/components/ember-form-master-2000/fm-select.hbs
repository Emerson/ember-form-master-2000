{{#if prompt}}
  <option disabled selected={{is-not value}}>
    {{prompt}}
  </option>
{{/if}}

{{optionValuePath}} / {{optionLabelPath}}

{{#each content key="@identity" as |item|}}
  <option value="{{read-path item optionValuePath}}"
          selected={{is-equal (read-path item optionValuePath) value}}>
    {{read-path item optionLabelPath}}
  </option>
{{/each}}

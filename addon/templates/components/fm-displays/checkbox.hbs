<div class="{{styles.checkboxWrapperClass}} {{if isFocused styles.focusClass}} {{if visibleErrors.length styles.errorClass}} {{formGroupClass}}">
  <div class="checkbox">
    <label>
      {{yield}}
      {{label}}
    </label>

    {{#if visibleErrors.length}}
      <span class="{{styles.errortextClass}}">
        {{visibleErrors.firstObject}}
      </span>
    {{/if}}
  </div>
</div>

<div class="row">

  <div class="col-sm-8">
    {{#fm-form action='submit'}}

      {{fm-field label='First Name'
        value=this.model.exampleModel.first_name
        errors=this.model.exampleModel.errors.first_name
        placeholder='Foo'
        widgetAttrs=(hash
          name='first_name'
          data-test='firstName'
        )
        data-test='input'
      }}

      {{fm-field label='Last Name'
        value=this.model.exampleModel.last_name
        errors=this.model.exampleModel.errors.last_name
        placeholder='Bar'
        data-test='input2'
      }}

      {{fm-field
        label='Write an Essay'
        widget='textarea'
        value=this.model.exampleModel.essay
        errors=this.model.exampleModel.errors.essay
        rows='6'
        helptext='Make sure its good!'
        data-test='textarea'
      }}

      {{fm-field
        label='Choose Something'
        widget='select'
        content=this.model.selectOptions
        optionValuePath='value'
        optionLabelPath='label'
        prompt='Select Something'
        value=this.model.exampleModel.language
        action=(action (mut this.model.exampleModel.language))
        errors=this.model.exampleModel.errors.language
        data-test='select'
      }}

      {{fm-field
        widget='checkbox'
        label='Are you awesome?'
        value=this.model.exampleModel.isAwesome
        errors=this.model.exampleModel.errors.isAwesome
        data-test='checkbox'
      }}

      {{fm-field
        widget='radio-group'
        label='Choose the best language'
        name='bestLanguage'
        content=this.model.radioOptions
        optionValuePath='value'
        optionLabelPath='label'
        value=this.model.exampleModel.bestLanguage
        errors=this.model.exampleModel.errors.bestLanguage
        data-test='radioGroup'
      }}

      {{fm-submit
        value='Submit the Form'
        disabled=this.model.disableSubmit
        data-test="submit"
      }}

    {{/fm-form}}
  </div>

  <div class="col-sm-3 col-sm-offset-1">
    <a href="#" {{action 'toggleErrors'}} class="btn btn-default btn-block">Toggle Errors</a>
    <a href="#" {{action 'toggleSelectValue'}} class="btn btn-default btn-block">Toggle Select Value</a>
    <a href="#" {{action 'toggleSubmit'}} class="btn btn-default btn-block">Toggle Disable Submit</a>
    <a href="#" {{action 'toggleCheckbox'}} class="btn btn-default btn-block">Toggle Checkbox</a>
    <a href="#" {{action 'toggleRadio'}} class="btn btn-default btn-block">Toggle Radio</a>
    <hr>
    <h4>Model Values</h4>
    <ul>
      <li>First Name: {{this.model.exampleModel.first_name}}</li>
      <li>Last Name: {{this.model.exampleModel.last_name}}</li>
      <li>
        Essay:
        {{#if this.model.exampleModel.essay}}
          <br>
          <em>{{{this.model.exampleModel.essay}}}</em>
          <br>
        {{/if}}
      </li>
      <li>Choose Something: {{this.model.exampleModel.language}}</li>
      <li>
        Are you awesome?
        {{#if this.model.exampleModel.isAwesome}}
          Yup
        {{else}}
          Nope
        {{/if}}
      </li>
      <li>Best Language: {{this.model.exampleModel.bestLanguage}}</li>
    </ul>
  </div>

</div>

<hr>
